<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context="com.dcproject.nodues.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <ImageView android:src="@drawable/nitc"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview1"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="21dp"
            android:textStyle="bold"
            android:text="No Due Automator Login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Email Id"
            android:id="@+id/editText_email"
            android:layout_below="@+id/textview1"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Enter Your Password"
            android:id="@+id/editText_password"
            android:inputType="textPassword"
            android:layout_below="@+id/editText_email"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:id="@+id/button_login"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/editText_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/ForgotPasswordBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/button_login"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/googleSignInBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ForgotPasswordBtn"
            android:layout_marginStart="29dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/common_google_signin_btn_icon_light" />

    </RelativeLayout>

</ScrollView>